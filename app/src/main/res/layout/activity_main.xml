<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.eee.www.chewchew.viewmodels.PreferenceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="20dp"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.eee.www.chewchew.ui.MenuSpinner
                android:id="@+id/menuSpinner"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:position="@{viewModel.menuPosition}" />

            <com.eee.www.chewchew.ui.CountSpinner
                android:id="@+id/pickCountSpinner"
                max="5"
                min="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:item="@{viewModel.pickCount}" />

            <com.eee.www.chewchew.ui.CountSpinner
                android:id="@+id/teamCountSpinner"
                max="5"
                min="2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:item="@{viewModel.teamCount}" />
        </LinearLayout>

        <com.eee.www.chewchew.ui.CanvasView
            android:id="@+id/canvasView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>